class LCM
{
    MaillonM tete;


    public LCM(MaillonM n)
    {
	this.tete = n;
    }

    public MaillonM getTete()
    {
	return (this.tete);
    }

    public void setTete(MaillonM n)
    {
	this.tete = n;
    }

    public Move elementTete()
    {
	return (this.tete.list);
    }

    public void ajoutPlays(int[] tab)
    {
	
	Move plays;
	int i;
	int j;

	j = 0;
	i = -1;
	
	while(++i < tab.length)
	{
	    
	    if(tab[i] < 3 && tab[i] > 0)
	    {
		while(++j <= tab[i])
		{
		    MaillonM old = this.tete;
		    this.tete = new MaillonM(plays = new Move(i   , j ), old);
		}
	    }
	    else if(tab[i] >= 3)
	    {
		while(++j <= 3)
		{
		    MaillonM old = this.tete;
		    this.tete = new MaillonM(plays = new Move(i   , j ), old);
		}
	    }
	    j = 0;
	}
	
    }

    

    public void seekLine(int[] tab, int p)
    {
	int i;
	Move a;
	    
	i = -1;

	while(++i < tab.length)
	{
	    if(tab[i] >= p)
	    {
		MaillonM old = this.tete;
		this.tete = new MaillonM(a = new Move(i, p), old);
	    }
	}
	
    }

    
    public boolean appartientListe(Move x)
    {
	MaillonM p;
	boolean val;

	val = false;
	p = this.tete;
	while(p != null && val == false)
	{
	    if(p.list == x)
		val = true;
	    p = p.getNext();
	}
	return val;
    }

    

    

    public int nbElemList()
    {
	int compt;
	MaillonM l;

	l = new MaillonM(null);
	compt = 0;
	l = this.tete;
	while(l != null)
	{
	    
		
	    l = l.next;

	    compt++;
	}

	return (compt);
    }
    
    public Move choice (int x)
    {
	int compt;
	MaillonM l;
	boolean var;

	var = false;;
        
	compt = 0;
	l = this.tete;
	while(l != null && var == false)
	{
	    compt++;
	    if(compt == x)
		var = true;
	    else
		l = l.next;
	}
	return l.list;
    }
    
    public void showPlays()
    {
	LCM p;
	boolean a;

	a = false;
	p = new LCM(this.tete);

	System.out.print("[");
	while(p.tete != null &&  a == false)
	{
	    System.out.print("(" + p.tete.list.getLine() + "," + p.tete.list.getMatchNb() + ")");
	    if(p.tete.next != null)
	    {
	        System.out.print(";");
		p.tete = p.tete.next;
	    }
	    else
		a =true;
	}
	System.out.print("]");
	System.out.println();
    }




}
